# ElectroAnalyzer Environment Configuration
# Copy this file to .env and set your actual values

# Security - REQUIRED: Generate a strong secret key (minimum 32 characters)
SECRET_KEY=your-super-secret-jwt-key-change-this-in-production-minimum-32-chars

# File Encryption - REQUIRED: Generate strong encryption keys
FILE_ENCRYPTION_KEY=your-base64-encoded-fernet-key-for-file-encryption
# Alternative: Use password-based key generation (NOT RECOMMENDED FOR PRODUCTION)
# FILE_ENCRYPTION_PASSWORD=your-strong-password-for-file-encryption
# FILE_ENCRYPTION_SALT=your-random-salt-for-key-derivation

# Database Encryption - REQUIRED: Generate strong encryption keys for database fields
DATABASE_ENCRYPTION_KEY=your-base64-encoded-fernet-key-for-database-encryption
# Alternative: Use password-based key generation (NOT RECOMMENDED FOR PRODUCTION)
# DATABASE_ENCRYPTION_PASSWORD=your-strong-password-for-database-encryption
# DATABASE_ENCRYPTION_SALT=your-random-salt-for-database-key-derivation

# Environment (development, testing, production)
ENVIRONMENT=development

# AI Configuration
USE_AI_MOCKS=false

# Database Configuration (if using external DB)
# DATABASE_URL=sqlite:///./compliance.db

# API Configuration
API_HOST=127.0.0.1
API_PORT=8001

# Logging
LOG_LEVEL=INFO

# Development Settings
DEBUG=false
TESTING=false

# Security Settings
# Session timeout in minutes (default: 30)
SESSION_TIMEOUT_MINUTES=30
# Maximum concurrent sessions per user (default: 3)
MAX_CONCURRENT_SESSIONS=3
# Maximum inactive time in minutes (default: 15)
MAX_INACTIVE_MINUTES=15

# Rate Limiting Settings
# Enable enhanced rate limiting (default: true)
ENABLE_RATE_LIMITING=true
# Default requests per minute (default: 60)
DEFAULT_RATE_LIMIT_PER_MINUTE=60
# Default requests per hour (default: 1000)
DEFAULT_RATE_LIMIT_PER_HOUR=1000
