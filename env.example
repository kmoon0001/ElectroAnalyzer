# ElectroAnalyzer Environment Configuration
# Copy this file to .env and set your actual values

# Security - REQUIRED: Generate a strong secret key
SECRET_KEY=your-super-secret-jwt-key-change-this-in-production

# File Encryption - REQUIRED: Generate strong encryption keys
FILE_ENCRYPTION_KEY=your-base64-encoded-fernet-key-for-file-encryption
# Alternative: Use password-based key generation
# FILE_ENCRYPTION_PASSWORD=your-strong-password-for-file-encryption
# FILE_ENCRYPTION_SALT=your-random-salt-for-key-derivation

# Database Encryption - REQUIRED: Generate strong encryption keys for database fields
DATABASE_ENCRYPTION_KEY=your-base64-encoded-fernet-key-for-database-encryption
# Alternative: Use password-based key generation
# DATABASE_ENCRYPTION_PASSWORD=your-strong-password-for-database-encryption
# DATABASE_ENCRYPTION_SALT=your-random-salt-for-database-key-derivation

# Environment (development, testing, production)
ENVIRONMENT=development

# AI Configuration
USE_AI_MOCKS=false

# Database Configuration (if using external DB)
# DATABASE_URL=sqlite:///./compliance.db

# API Configuration
API_HOST=127.0.0.1
API_PORT=8001

# Logging
LOG_LEVEL=INFO

# Development Settings
DEBUG=false
TESTING=false
